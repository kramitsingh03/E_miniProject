<!-- include header files -->
<%- include("include/header.ejs") %>
    <!-- include navbar -->
    <%- include("include/navbar.ejs") %>
        <div>
            main page
        </div>

        <!-- display all details -->


        <div class="d-flex justify-content-center align-items-center flex-wrap bg-info">
            <% for (let i=0; i < EstoreData.length; i++) { %>

                <div class="card" style="width: 20rem; height: 600px;">
                    <img src="<%= EstoreData[i].thumbnail %>" class="card-img-top" alt="..." height="250px">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=EstoreData[i].title %>
                        </h5>
                        <p class="card-text">
                            <%= EstoreData[i].description %>
                        </p>
                        <p class="card-text">
                            <%= EstoreData[i].brand %>
                        </p>
                        
                        <p><i class="text-secondary"><%= EstoreData[i].category %></i></p>
                        <span class="text-primary">
                            Rs. <%= EstoreData[i].price %>
                        </span>
                        <div class="button">
                            <button class="btn btn-success">Buy Now!</button>
                        </div>

                    </div>
                </div>



                <% } %>
        </div>








        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        </body>

        </html>